<?xml version="1.0" encoding="utf-8" ?>

<PlaylistModifier 
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:noNamespaceSchemaLocation="..\..\Playlist Management\PlaylistModifiers\PlaylistModifier.xsd">

  <Type>WMPAttribute</Type>
  
  <UI>
    <DisplayName>Artist Name</DisplayName>

    <Inputs>
      <Input>
        <ID>1</ID>
        <UILabel>Artist</UILabel>
      </Input>
    </Inputs>
  </UI>

  <Action>Add</Action>

  <ModifierKey>WMP_ArtistName</ModifierKey>

  <Method>
    <MediaAttributeMatch>
      <AttributeMappings>
        <Mapping>
          <ID>1</ID>
          <WMP_Attribute>Author</WMP_Attribute>
          <InputID>1</InputID>
        </Mapping>
      </AttributeMappings>
    </MediaAttributeMatch>
  </Method> 
  
</PlaylistModifier>