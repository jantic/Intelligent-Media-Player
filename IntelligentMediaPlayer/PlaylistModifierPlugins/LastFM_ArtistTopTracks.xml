<?xml version="1.0" encoding="utf-8" ?>

<PlaylistModifier
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:noNamespaceSchemaLocation="..\PlaylistManagement\PlaylistModifiers\PlaylistModifier.xsd">

  <Type>LastFM</Type>
  
  <UI>
    <DisplayName>Last.FM Artist Top Tracks</DisplayName>

    <Inputs>
      <Input>
        <ID>1</ID>
        <UILabel>Artist</UILabel>
      </Input>
    </Inputs>
  </UI>

  <Action>Add</Action>

  <Method>
    <LastFMrequest>
      <RequestURL>
        <TemplateURL>http://ws.audioscrobbler.com/2.0/artist/[Artist]/toptracks.xml </TemplateURL>
        <TemplateMappings>
          <Mapping>
            <ID>1</ID>
            <ToReplace>[Artist]</ToReplace>
            <InputID>1</InputID>
          </Mapping>
        </TemplateMappings>
      </RequestURL>

      <Response>
        <Outputs>
          <Output>
            <ID>1</ID>
            <WMP_Attribute>Artist</WMP_Attribute>
            <xPath>//toptracks/track/artist/name</xPath>
          </Output>
          <Output>
            <ID>2</ID>
            <WMP_Attribute>Title</WMP_Attribute>
            <xPath>//toptracks/track/name</xPath>
          </Output>
        </Outputs>
      </Response>
    </LastFMrequest>
  </Method>
  
  
</PlaylistModifier>